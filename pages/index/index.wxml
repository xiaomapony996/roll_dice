<!--index.wxml-->
<view class="bg">


<view class="cap_container" animation="{{animation}}">
    <movable-area>
        <movable-view direction="vertical" y="{{y}}">
            <image class="cap" src="../image/cap.svg"></image>
        </movable-view>
    </movable-area>
</view>

<view class="base_container" animation="{{animation}}">
    <image class="base" src="../image/base.svg"></image>
    <view class="dice_container">
    <image class="dice" style="margin-left: {{position_x1}}rpx;margin-top: {{position_y1}}rpx;" src="../image/dice/dice{{dice_x1}}-{{dice_y1}}.png"></image>
    <image class="dice" style="margin-left: {{position_x2}}rpx;margin-top: {{position_y2}}rpx;" src="../image/dice/dice{{dice_x2}}-{{dice_y2}}.png"></image>
    <image class="dice" style="margin-left: {{position_x3}}rpx;margin-top: {{position_y3}}rpx;" src="../image/dice/dice{{dice_x3}}-{{dice_y3}}.png"></image>
    <image class="dice" style="margin-left: {{position_x4}}rpx;margin-top: {{position_y4}}rpx;" src="../image/dice/dice{{dice_x4}}-{{dice_y4}}.png"></image>
    <image class="dice" style="margin-left: {{position_x5}}rpx;margin-top: {{position_y5}}rpx;" src="../image/dice/dice{{dice_x5}}-{{dice_y5}}.png"></image>
    </view>
</view>

<view class="btn_shake" bindtap="shake">æ‘‡</view>

</view>



